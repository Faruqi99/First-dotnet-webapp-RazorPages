@page
@model RazorPizzeria.Pages.Checkout.CheckoutModel
@{
}
<h1>Your Order</h1>
@{
	var ImagePath = "~/Images/Pizzas/" + (Model.ImageTitle) + ".png";
}
<div class="align-content-center">
	<div class="col-3 mx-auto mb-5">
		<img src=@ImagePath class="w-100" asp-append-version="true" />
		<p>Your order for @Model.PizzaName is READY</p>
		<p>Please pay $@Model.FinalPrice at the register</p>
		<a class="btn alert-primary mt-1 mx-auto" asp-area="" asp-page="ThankYou">Confirm Your Order</a>
	</div>
</div>
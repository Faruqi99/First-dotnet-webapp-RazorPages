@page
@model RazorPizzeria.Pages.Forms.CustomPizzaModel
@{
}
<div class="text-center container">
	<h1>Create Your Own Pizza</h1>
	<form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 bg-light col-4 rounded-5">
		<div>
			<input type="text" asp-for="Pizza.PizzaName" placeholder="Give your pizza a name...">
			<br />
			<input type="checkbox" asp-for="Pizza.TomatoSauce"> TomatoSauce
			<br />
			<input type="checkbox" asp-for="Pizza.Cheese"> Cheese
			<br />
			<input type="checkbox" asp-for="Pizza.Chicken" /> Chicken
			<br />
			<input type="checkbox" asp-for="Pizza.Pinapple" /> Pinapple
			<br />
			<input type="checkbox" asp-for="Pizza.Mashroom" /> Mashroom
			<br />
			<input type="checkbox" asp-for="Pizza.Pepperonni" /> Pepperonni
			<br />
			<input type="checkbox" asp-for="Pizza.Shrimp" /> Shrimp
		</div>
		<div>
			<button class="btn btn-primary mt-1" type="submit">Order my Pizza</button>
		</div>
	</form>
</div> 